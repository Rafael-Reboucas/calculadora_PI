#include <stdio.h>

int main(void)
{
    float x=0, y=0, result=0;
    int op;
    int soma, sub, multi, divi;
    
    do
    {
        printf("\nCALCULADORA\n");
        printf("Qual operação deseja efetuar??\n");
        printf(" 1 - Soma\n 2 - Subtração\n 3 - Multiplicação\n 4 - Divisão\n");
        soma=1;
        sub=2;
        multi=3;
        divi=4;
        scanf("%d", &op);
        

        
        printf("Escolha o primeiro número: ");
        scanf("%f", &x);
        printf("Escolha o segundo número: ");
        scanf("%f", &y);
        
        switch(op){
            case 1:
                result=x+y;
            break;
            
            case 2:
                result=x-y;
            break;
            
            case 3:
                result=x*y;
            break;
            
            case 4:
                result=x/y;
            break;
            
            default:
            printf("\nOpçao inválida, realize uma válida");
        }
        
        if(op==1){
        printf("\n\t A soma é: %0.2f\n", result);
        }
        
        if(op==2){
        printf("\n\t A subtração é: %0.2f\n", result);
        }
        
        if(op==3){
        printf("\n\t A multiplicação é: %0.2f\n", result);
        }
        
        if(op==4){
        printf("\n\t A divisão é: %0.2f\n", result);
        }
       
        printf("\nDeseja continuar??\nSe sim, digite 1\n");
        scanf("%d", &op);
    }
    
 while(op==1);
    
}
